{
  "functions": {
    "source": "functions",
    "runtime": "nodejs18",             
    "platform": "gcfv2"                
  },
  "hosting": {
    "public": ".next",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "nextApp"
      }
    ]
  }
}
